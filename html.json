{
	// Place your snippets for html here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	"buka tag php": {
		"prefix": "php",
		// "body": "<?php $1 ?>" 
		"body": [
			"<?php $1 ?>"
		]
	},
	"buka tag php echo": {
		"prefix": "phpp",
		"body": "<?= $$1; ?>" 
	},
	"Input Label": {
		"prefix": "formel",
		"body": [
			"<label for=\"${2:username}\">${3:Username}</label>",
			"<input type=\"${1:text}\" name=\"${2:username}\" id=\"${2:username}\">"
		]
	},
	"Input Labe2": {
		"prefix": "bformel",
		"body": [
			"<label for=\"${2:username}\">${3:Username}</label>",
			"<input type=\"${1:text}\" name=\"${2:username}\" id=\"${2:username}\" class='form-control mb-3'>"
		]
	},
	"membuat form custom": {
		"prefix": "myform",
		"body": "<form method=\"${1|get,post|}\" action=\"$2\">$3</form>"
	},
	"membuat php if templeting":{
		"prefix": "pif",
		"body": [
			"<?php if($1) : ?>",
			"\t$2",
			"<?php endif ; ?>"
		]
	},
	"membuat php foreach templeting":{
		"prefix": "pforec",
		"body": [
			"<?php foreach ($${1:variabels} as $${2:variabel}) : ?>$0",
            "<?php endforeach ; ?>"
		]
	},
	"membuat php for templeting":{
		"prefix": "pfr",
		"body": [
			"<?php for(\\$i = 0; \\$i < 5 ; \\$i++ ):?>",
            "<?php endfor ; ?>"
		]
	},
	"komentar html": {
		"prefix": "komen",
		"body" : "<!-- $1 -->$0"
	},
